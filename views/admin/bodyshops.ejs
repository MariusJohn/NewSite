<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bodyshops - Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/admin-bodyshops.css">
  <link rel="stylesheet" href="/css/reset.css">

   <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <div class="admin-dashboard-container">

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <a href="/."><img src="/img/logo-true.svg" alt="My Car Quote Logo"></a>
      <h2>Admin Panel</h2>
      <ul class="menu">
        <li><a href="/jobs<%= ADMIN_BASE %>?filter=total">Total Jobs (<%= totalCount %>)</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>?filter=live">Live Jobs (<%= liveCount %>)</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>?filter=approved">Approved Jobs (<%= approvedCount %>)</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>?filter=rejected">Rejected Jobs (<%= rejectedCount %>)</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>?filter=archived">Archived Jobs (<%= archivedCount %>)</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>?filter=deleted">Deleted Jobs (<%= deletedCount %>)</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>/quotes">Jobs with Quotes</a></li>
        <li><a href="/jobs<%= ADMIN_BASE %>/bodyshops" class="active">Bodyshops</a></li>
      </ul>

      <div class="logout-container">
        <form action="<%= ADMIN_BASE %>/logout" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="logout-btn">Logout</button>
        </form>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <h1>Manage Bodyshops</h1>

      <form method="GET" action="/jobs<%= ADMIN_BASE %>/bodyshops" style="margin-bottom: 1rem; display: flex; gap: 0.5rem;">
        <input 
          type="text" 
          name="search" 
          placeholder="Search by name or postcode" 
          value="<%= search %>" 
          style="padding: 8px 12px; font-size: 14px; width: 280px; border: 1px solid #ccc; border-radius: 4px;"/>
        <button 
          type="submit" 
          style="padding: 8px 16px; font-size: 14px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">
          Search
        </button>
      </form>

      <table class="bodyshops-table">
        <thead>
          <tr>
            <th>Bodyshop Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Location</th>
            <th>Verified</th>
            <th>Admin Approved</th>
            <th>Subscription</th>
            <th>Subscription Ends</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% bodyshops.forEach(bodyshop => { %>
            <tr>
              <td style="word-break: break-word;"><%= bodyshop.name %></td>
              <td style="word-break: break-word;"><%= bodyshop.email %></td>
              <td><%= bodyshop.phone %></td>
              <td><%= bodyshop.area %></td>

              <td>
                <% if (bodyshop.verified) { %>
                  <span class="badge active">Verified</span>
                <% } else { %>
                  <span class="badge pending">Unverified</span>
                <% } %>
              </td>

              <td>
                <% if (bodyshop.status === 'inactive') { %>
                  <span class="badge inactive">Inactive</span>
                <% } else if (bodyshop.adminApproved) { %>
                  <span class="badge active">Approved</span>
                <% } else { %>
                  <span class="badge pending">Pending</span>
                <% } %>
              </td>

              <td>
                <% if (bodyshop.subscriptionStatus === 'trial') { %>
                  <span class="badge trial">Trial</span>
                <% } else if (bodyshop.subscriptionStatus === 'active') { %>
                  <span class="badge paid">Paid</span>
                <% } else { %>
                  <span class="badge pending">Unknown</span>
                <% } %>
              </td>

              <td>
                <% if (bodyshop.subscriptionEndsAt) { %>
                  <%= new Date(bodyshop.subscriptionEndsAt).toLocaleDateString('en-GB', {
                    day: '2-digit', month: '2-digit', year: 'numeric'
                  }) %>
                <% } else { %>
                  <span class="badge pending">N/A</span>
                <% } %>
              </td>

              <td>
                <% if (bodyshop.status === 'inactive') { %>
                  <form action="/jobs<%= ADMIN_BASE %>/bodyshops/<%= bodyshop.id %>/reactivate" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-approve">Reactivate</button>
                  </form>
                <% } else { %>
                  <% if (!bodyshop.adminApproved) { %>
                  <form action="/jobs<%= ADMIN_BASE %>/bodyshops/<%= bodyshop.id %>/approve" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-approve">Approve</button>
                  </form>
                  <% } %>
                  <form action="/jobs<%= ADMIN_BASE %>/bodyshops/<%= bodyshop.id %>/reject" method="POST" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-reject">Reject</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const toggleBtn = document.getElementById("toggleSidebar");
      const sidebar = document.getElementById("sidebar");

      if (toggleBtn && sidebar) {
        toggleBtn.addEventListener("click", () => {
          sidebar.classList.toggle("collapsed");
        });
      }
    });
  </script>
</body>
</html>
