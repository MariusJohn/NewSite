<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bodyshop Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Fonts & Styles -->
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/bodyshop-login.css" />

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="page-wrapper">
  <!-- Header -->
  <%- include('../partials/header') %>

  <!-- Consistent Wrapper -->

    <main>
      <div class="login-wrapper">
        <h1>Bodyshop Login</h1>
        <form id="loginForm" action="/bodyshop/login" method="POST" class="login-form">
          <label for="bodyshopEmail">Bodyshop Email:</label>
          <input type="email" id="bodyshopEmail" name="email" placeholder="Email" required />
          <span class="error-message" id="email-error"></span>

          <label for="password">Password:</label>
          <div class="password-container">
            <input type="password" id="password" name="password" placeholder="Your Password" required />
            <span class="password-toggle" onclick="togglePasswordVisibility(this)">üëÅÔ∏è</span>
            <span class="error-message" id="password-error"></span>
          </div>

          <label for="bodyshopArea">Postcode / Area:</label>
          <input type="text" id="bodyshopArea" name="area" placeholder="Postcode / Area" required />
          <span class="error-message" id="area-error"></span>

          <div class="g-recaptcha" data-sitekey="<%= process.env.RECAPTCHA_SITE_KEY %>"></div>


          <button type="submit" class="login-btn">Login</button>
          <p class="forgot-password"><a href="/bodyshop/password-reset">Forgot Password?</a></p>
          <p class="register-link">
            <a href="/bodyshop/register">New Bodyshop? Register here</a>
          </p>
          <p id="form-error-message" class="error-message" style="display: none;"></p>
        </form>
      </div>
    </main>
 
  <!-- Footer -->
  <%- include('../partials/footer') %>
</div>

  <!-- Scripts -->
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <script src="/js/bodyshop-login.js"></script>
  <script defer src="/js/navbar-toggle.js"></script>
</body>
</html>
