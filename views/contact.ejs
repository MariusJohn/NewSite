</head>
<body>

<!-- Include Header -->    

<%- include('partials/header') %>

 <!-- Main Content -->
<div class="container">
    
  <main>
                
            
    <div class="main-banner-hero">
                    
        <h1>Contact information</h1>

   
        <h2>We provide transparent, 
            fair repair cost estimates for <span>lease returns </span>and <span>private repairs</span> ,
            connecting you with our trusted bodyshop network.</h2>
    
    </div>


</main>   

    <div id="content3">
                    
        
        <div class="container3" id="contact">
          <h2>Contact Us</h2>
              <form action="/contact" method="POST">
                    <div class="form-group">
                      <label for="name">Name</label>
                      <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                      <label for="message">Message</label>
                      <textarea id="message" name="message" rows="5" required></textarea>
                    </div>
                <button type="submit">Send Message</button>
              </form>
            </div>
      </div>
</div> 


<!-- Include Footer -->
<%- include('partials/footer') %>

<script src="/js/mobile-nav.js"></script>

</body>


